{
  "name": "rules-catalog",
  "version": "1.0.0",
  "description": "rules catalog",
  "main": "server.js",
  "scripts": {
    "prebuild": "mkdir -p ./public/js/build/",
    "build": "browserify -t babelify ./source/app.js > ./public/js/build/build.js",
    "watch": "watchify -t babelify ./source/app.js -o ./public/js/build/build.js -dv",
    "server": "babel-node server.js --presets es2015,stage-2",
    "lint": "xo ./server.js ./source/**/*.jsx ./source/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jansanchez/rules-catalog"
  },
  "author": "Jan Sanchez <joejansanchez@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jansanchez/rules-catalog/issues"
  },
  "dependencies": {
    "babel": "^5.6.14",
    "express": "^4.13.0",
    "react": "^0.13.3",
    "react-engine": "^1.7.0",
    "react-router": "^0.13.3",
    "uid": "0.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "watchify": "^3.7.0",
    "xo": "^0.14.0"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "babel/new-cap": 0,
      "no-undef": 0,
      "indent": 0,
      "no-unused-vars": 0
    }
  }
}
